<!--产品展示部分-->
<div class="text-center">
  <h3>产品展示</h3>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <a asp-controller="Home" asp-action="ProductInformation">
        <img class="d-block w-100" src="~/images/slide1.png" alt="First slide">
      </a>
    </div>
    <div class="carousel-item">
      <a asp-controller="Home" asp-action="ProductInformation">
        <img class="d-block w-100" src="~/images/slide2.png" alt="Second slide">
      </a>
    </div>
    <div class="carousel-item">
      <a asp-controller="Home" asp-action="ProductInformation">
        <img class="d-block w-100" src="~/images/slide3.png" alt="Third slide">
      </a>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="text-center">
  <p></p>
  <h3>感谢赞助商</h3>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">@ViewData["table_col_two"]</th>
      <th scope="col">@ViewData["table_col_three"]</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>@ViewData["table_row_one_role"]</td>
      <td>@ViewData["table_row_one_name"]</td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>@ViewData["table_row_two_role"]</td>
      <td>@ViewData["table_row_two_name"]</td>
    </tr>
  </tbody>
</table>
</div>
